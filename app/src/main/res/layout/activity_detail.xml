<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_nsv"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:padding="16sp">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="16sp"
            android:text="Title Movies"
            android:textSize="24sp"
            android:textStyle="bold|italic"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16sp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detail_poster"
                android:layout_width="180sp"
                android:layout_height="180sp"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_movies" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/detail_overview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/detail_overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description Movies"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/detail_rating_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Rating"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/detail_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 of 10"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/detail_release_title"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="Release Date"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/detail_release"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Release on Januari 24th, 2018"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/detail_review_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Review :"
            android:textSize="20dp"
            android:layout_marginTop="16sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/detail_review_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/detail_trailer_title"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Movie Trailers :"
            android:textSize="20dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/detail_trailer_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />



    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
